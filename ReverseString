int main() {
  
  // String Reverse
  string str;
  cout << "Enter string to be reversed: ";
  getline(cin, str);
  reverse(str.begin(), str.end());
  cout << "Reversed String: " << str << endl; */

  //length of string
  string s;
  cout << "Enter string: ";
  getline(cin, s);
  int numChar = 0;

  for(int i = 0; i < s.length(); i++){
    if(s[i]!=' '){
        numChar++;
    }
  }
  cout << "Number of the Characters is: "<< numChar<< endl;

    return 0;
}